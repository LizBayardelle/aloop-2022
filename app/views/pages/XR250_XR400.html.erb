<section class="py-5">
    <div class="container px-5 my-5">
        <div class="row gx-5 align-items-center">
            <div class="col-lg-6 order-first order-lg-last">
                <img class="img-fluid rounded mb-5 mb-lg-0" src="https://aloopphotobucket.s3.us-west-1.amazonaws.com/Products/kit_1_2.jpg" alt="4SMX Kit for XR250 and XR400" />
            </div>
            <div class="col-lg-6">
