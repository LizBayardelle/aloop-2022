<%= simple_form_for(product) do |f| %>
  <div class="modal-body">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs spaced">
      <%= f.input :name, label: "Product Name" %>

      <div class="row">
        <div class="form-group col-8">
          <%= f.input :subtitle, label: "Subtitle Details" %>
        </div>
        <div class="form-group col-4">
          <%= f.input :price %>
        </div>

        <div class="form-group col-6">
          <%= f.label "Categories" %><br>
          <div class="form-check">
            <%= f.collection_check_boxes(:product_category_ids, ProductCategory.all, :id, :name ) %>
          </div>
        </div>

        <div class="form-group col-6">
          <%= f.label "Models" %><br>
          <div class="form-check">
            <%= f.collection_check_boxes(:bike_model_ids, BikeModel.all, :id, :name ) %>
          </div>
        </div>

        <div class="form-group col-12">
          <%= f.label "Full Product Description", class: "mt-2" %>
          <%= f.text_area :description, label: "Full Description", class: "tinymce" %>
        </div>

        <div class="form-group col-6">
          <%= f.input :meta_title, label: "Meta Title" %>
        </div>

        <div class="form-group col-6">
          <%= f.input :meta_keywords, label: "Meta Keywords" %>
        </div>

        <div class="form-group col-4">
          <%= f.input :height %>
        </div>
        <div class="form-group col-4">
          <%= f.input :width %>
        </div>
        <div class="form-group col-4">
          <%= f.input :depth %>
        </div>
      </div> <!-- row -->


      <%= f.input :active, label: "This is an active product.", class: "mt-2" %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
     <%= f.button :submit %>
  </div>
<% end %>