<script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.1.2/tinymce.min.js" integrity="sha512-cJ2vUNryvHzgNJfmFTtZ2VX5EMT5JOU1i8nm+L1kwoHQ9bSqSYdswxyk++9Gi27p3BG2rXZXLMsTsluY4RZSSw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
  tinymce.init({
    selector: '.tinymce'
  });
</script>


<%= simple_form_for(product) do |f| %>
  <div class="modal-body">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs spaced">

      <div class="row">
        <div class="form-group col-12">
          <%= f.input :name, label: "Product Name" %>
        </div>
        <div class="form-group col-12">
          <%= f.input :subtitle, label: "Subtitle Details" %>
        </div>


        <div class="form-group col-6">
          <%= f.label "Categories" %><br>
          <div class="form-check">
            <%= f.collection_check_boxes(:product_category_ids, ProductCategory.all, :id, :name ) %>
          </div>
        </div>
        <div class="form-group col-6 mt-4">
          <%= f.input :active, label: "This is an active product.", class: "mt-2" %>
        </div>


        <div class="form-group col-12">
          <%= f.label "Full Product Description", class: "mt-2" %>
          <%= f.text_area :description, label: "Full Description", class: "tinymce" %>
        </div>
      </div> <!-- row -->


      <div class="bg-grey my-3 z-depth-3 py-5">
        <div class="row px-4">
          <h3 class="text-center thin color-blue">SEO Information</h3>

          <div class="form-group col-6">
            <%= f.input :meta_title, label: "Meta Title" %>
          </div>

          <div class="form-group col-6">
            <%= f.input :meta_keywords, label: "Meta Keywords" %>
          </div>
        </div>
      </div>



      <div class="row pt-4">
        <h3 class="text-center thin color-blue">Backend Details</h3>

        <div class="form-group col-12">
          <%#= f.input :size, label: "Product Size" %>
        </div>

        <div class="form-group col-12">
          <%= f.input :application_notes, label: "Application Notes" %>
        </div>

        <div class="form-group col-4">
          <%= f.input :height, label: "Shipping Box Height" %>
        </div>

        <div class="form-group col-4">
          <%= f.input :width, label: "Shipping Box Width" %>
        </div>

        <div class="form-group col-4">
          <%= f.input :depth, label: "Shipping Box Depth" %>
        </div>
      </div> <!-- row -->


    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
     <%= f.button :submit %>
  </div>
<% end %>