<% if @order.paid == false %>


  <main id="notPaid" class="py-5 container">
    <header class="text-center">

      <div class="progress mb-4 w-75 ms-auto me-auto">
        <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
      </div>

      <h1>Complete Your Payment</h1>
      <p>Order #<%= @order.id.to_s.rjust(6, "0") %></p>

    </header>

    <section class="payment-boxes text-center pt-4">
      <%= render partial: "orders/payment", locals: { order: @order } %>
      <%= render partial: "orders/form_paid", locals: { order: @order } %>
    </section>
  </main>


<% else %> <!-- PAID -->


<main class="py-5 container">
  <header class="text-center">

    <div class="progress mb-4 w-75 ms-auto me-auto">
      <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
    </div>

    <h1>Thank you for your order!</h1>
    <p>Order #<%= @order.id.to_s.rjust(6, "0") %></p>
  </header>

  Congrats!  Stuff!
</main>


<% end %>
